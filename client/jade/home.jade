mixin Field( opt )
  .control-group
    label.control-label #{opt.label}
    .controls
      | <#{opt.el} class="#{opt.type} #{opt.class}" id="#{opt.id}" type="#{opt.type}" tabindex="#{opt.tabindex}" value="#{opt.value}" #{opt.disabled} rows="#{opt.rows}" placeholder="#{opt.placeholder}" >#{opt.text}</#{opt.el}>

    if typeof opt.characters !== "undefined"
      span.badge #{opt.characters}

mixin field(i, a, z, b, m, c, ch)
  .control-group
    label.control-label #{a}
    d = ch == "disabled" ? "disabled" : null
      .controls
        if b == "textarea"
          | <#{i} class="#{b} #{m}" id="#{a}" type="#{b}" tabindex="#{c}" value="#{z}" #{d} rows=4 > #{z} </#{i}>
        else
          | <#{i} class="#{b} #{m}" id="#{a}" type="#{b}" tabindex="#{c}" value="#{z}" #{d}>

    if ch !== "disabled"
      span.badge #{ch}

mixin topnav(name)
  .topnav.navbar(class= name): .navbar-inner: .container
    if (name === "home")
      .shift(data-shift-direction="left", data-shift-area="about").clr-text.desat.home.left
        i.glyph-arrow-left
      .shift(data-shift-direction="right", data-shift-area="account").home.right
        {{#if currentUser}}
        .logout.clr-text.desat
          span.static{{currentUser.username}}
          span.hover logout
        i.glyph-arrow-right.clr-text.desat
        {{else}}
        span(data-modal="sign-in").clr-text.desat login
        {{/if}}
    if (name === "about")
      {{#if getAmplify 'user.loc'}}
      .shift(data-shift-direction="right", data-shift-area="home").clr-text.desat: i.glyph-arrow-right
      {{/if}}
    if (name === "account")
      .shift(data-shift-direction="left", data-shift-area="home").clr-text.desat: i.glyph-arrow-left
      ul.links.row
        mixin link(opt)
          a(href= opt.href ).clr-text.prime: li
            i(class= "glyph-" + opt.glyph)
            span= opt.label

        mixin link({label: "dashboard", href: "/account", glyph: "list" })
        mixin link({label: "offer", href: "/account/offer", glyph: "bucket" })
        mixin link({label: "messages", href: "/account/messages", glyph: "list" })
        mixin link({label: "profile", href: "/account/profile", glyph: "cog-2" })
        mixin link({label: "feedback", href: "/account/feedback", glyph: "keyboard" })

