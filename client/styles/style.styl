@import 'nib'

li
  list-style none


nav
  fixed left
  border-right 1px solid #ccc
  height 100%
  text-align center
  padding-right 20px
  z-index 2
  ul
    width 100%
    margin 0 0 20px 0
    &.main 
      absolute bottom
    &.account
      absolute top 40%
    li
      cursor pointer

@media (min-width: 1200px)
  nav
    padding-right 30px

.offer
  relative top
  width 100%
  height 170px
  border-bottom 1px solid #ddd
  float left
  &.voted
    background #eee
  .votes
    absolute top left
    height 100%
    font-size 20px
    width 40px
    text-align center
    line-height 170px
    font-weight bold
    margin-left 20px
  .symbol-wrapper
    height 100%
    width 220px
    float left
    .symbol
      font-size 5em
      line-height 1.65em
      margin-left 1.1em
      height 1.5em
      width 1.5em
      color white
      background red
      text-align center
      border-radius 2em
      margin-top 0.4em
  span
    &[data-field-value=name]
      font-weight bold
      font-size 32px
      margin 40px 0 15px
      display block
    &[data-field-value=price]
      font-weight 900
      color #585858
      text-transform uppercase
      font-size 11px
      letter-spacing 1px




#tagsets
  ul
    li
      display inline
#tags
  ul
    float left

table
  th
    cursor pointer
    &.active
      background #ccc
  td
    input
    select
    button
    span
    i
      margin-top 10px
      display block
    i
      cursor pointer
      margin-top 15px!important

.glyph
  float left
  text-align center
  background #eee
  padding .75em
  margin .75em 1.5em .75em 0
  width 7em
  border-radius .25em
  line-height 1.5em
  div
    font-size 2em
