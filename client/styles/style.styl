spanner(a, b)
  if odd(b)
    width floor(a * b)
  if even(b)
    width ceil(a * b)
  margin-left 0
  &.margin
    if odd(b)
      width floor((a * b) - gap)
    if even(b)
      width floor((a * b) - gap)
    &.left
      margin-left gap
    &.right
      margin-right gap
    &.left.right
      if odd(b)
        width floor((a * b) - (gap * 2))
      if even(b)
        width ceil((a * b) - (gap * 2))

