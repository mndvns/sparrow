@import 'nib'
@import 'icons.css'

li
  list-style none

a:hover
  text-decoration none

html
  cursor default

.content
  header
    margin-top 2em
    padding-left 2em
    border-bottom 1px solid #ddd
  .pad
    margin-top 2em

nav
  fixed left
  border-right 1px solid #ccc
  height 100%
  text-align center
  padding-right 20px
  z-index 2
  ul
    width 100%
    margin 0 0 20px 0
    &.main 
      absolute bottom
    &.account
      absolute top 40%
    li
      cursor pointer
    a
      width 100%
      display block

@media (max-width: 600px)
  nav
    display none

.offer
  height = 170px
  relative top
  width 100%
  height height
  border-bottom 1px solid #ddd
  section
    float left
    height 100%
    padding 0 10px
    .accountOffer &
      &:hover
        background #ddd
  &.voted
    background #eee
  .votes
    height 100%
    font-size 20px
    width 50px
    text-align center
    line-height height
    font-weight bold
  .symbol
    div
      font-size 4em
      line-height 100px
      height 100px
      width 100px
      color white
      background red
      text-align center
      border-radius 2em
      margin 35px 0
  .main
    width 300px
  .field
    &[data-field=name]
      font-weight bold
      font-size 32px
      margin 40px 0 15px
      display block
    &[data-field=business]
      font-weight 900
      color #585858
      text-transform uppercase
      font-size 11px
      letter-spacing 1px

#tagsets
  ul
    li
      display inline

.tag-list
  ul
    float left
    user-select none
    strong
      font-weight 900
      color #555
      text-transform uppercase
      font-size 11px
      letter-spacing 1px
      line-height 3em
    li
      border-left 1px solid #ddd
      span
        padding 5px 10px
        line-height 2em
        border-radius 0 2px 2px 0
    [data-active]
      background #ddd

table
  th
    cursor pointer
    &.active
      background #ccc
  td
    input
    select
    button
    span
    i
      margin-top 10px
      display block
    i
      cursor pointer
      margin-top 15px!important

.glyph
  float left
  text-align center
  background #eee
  padding .75em
  margin .75em 1.5em .75em 0
  width 7em
  border-radius .25em
  line-height 1.5em
  div
    font-size 2em

.actions
  padding-bottom 15px
  text-align center

#map_canvas
  height 300px
